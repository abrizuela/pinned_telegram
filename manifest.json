{
  "applications": {
    "gecko": {
      "id": "telegrampanel@alejandrobrizuela.com.ar"
    }
  },

  "manifest_version": 2,
  "name": "Pinned Telegram",
  "version": "2.2.1",
  "description": "Go to the pinned Telegram tab. If it doesn't exist, it's created.",

  "icons": {
    "48": "icons/telegram-48.png",
    "64": "icons/telegram-64.png"
  },
  
  "permissions": [
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "32": "icons/telegram-32.png"
    },
    "default_title": "Pinned Telegram",
    "default_area": "navbar"
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+W"
      }
    }
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }

}
